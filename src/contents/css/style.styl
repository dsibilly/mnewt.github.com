// all colors are defined here (or derived from these)
backgroundColor = #fcfcfc
textColor       = #555
linkColor       = #35235D


body
  padding-top: 20px
  font-family: 'Gilda Display', Georgia, serif
  font-size: 18px
  line-height: 1.5em
  color: textColor
  background-color: backgroundColor

// Custom container holds all page contents
.container
  // margin: 0 auto
  max-width: 700px

a
  color: linkColor
  // animate the anchor color on hover in/out
  transition: color 0.5s ease-in-out
  -moz-transition: color 0.5s ease-in-out
  -webkit-transition: color 0.5s ease-in-out

a:hover
  text-decoration: none
  color: linkColor * .7

li
  line-height: 1.3em

h1, h2, h3, h4
  margin-top: 1em
  margin-bottom: 0.5em
  // font-weight: normal

h1
  font-family: 'Give You Glory', Georgia, serif

h4
  font-weight: bold

.navbar-inner, .navbar .nav .active a, .navbar .nav .active a:hover, .hero-unit
  background-color: backgroundColor
  background-image: none
  filter: none
  box-shadow: none
  border: none

ul.nav.nav-pills li a
  line-height: 23px

.hero-unit h1, .hero-unit h2, .hero-unit h3
  font-family: 'Give You Glory', Georgia, serif


.hero-unit h1
  font-size: 100px
  font-weight: normal
  line-height: 80px
  margin-bottom: 0px
  color: textColor * 0.8

.hero-unit h2
  font-size: 58px
  font-weight: 100
  line-height: 50px
  margin-top: 0px
  color: textColor * 1.5

.hero-unit ul.inline
  text-align: justify

.hero-unit h3
  font-size: 26px

pre, code, pre code
  font-size: 14px
  // background-color: backgroundColor * 0.9
  background-repeat:repeat
  border: none

.author a, .author a:hover
  color: textColor * 1.5
  text-decoration: none

.post
  padding-top: 30px
  padding-bottom: 50px

.comment
  text-align: center

table.table tr td
  vertical-align: middle
