extends layout

block prepend title
  | #{ page.title } - 

block content
  include author
  article.post
    h1!= typogr(page.title).typogrify()
    p.byline
      span= moment(page.date).format('D MMMM YYYY')
      //- mixin author(page.metadata.author)
    section.articleContent!= typogr(page.html).typogrify()
  a(name='comment')
  include comments
