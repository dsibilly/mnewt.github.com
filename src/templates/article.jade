extends layout

block prepend title
  | #{ page.title } - 

block content
  include author
  article.post
    h1= page.title
    .byline= moment(page.date).format('D MMMM YYYY')
      //- mixin author(page.metadata.author)
    section.content!= typogr(page.html).typogrify()
  a(name='comment')
  include comments
